{
"manifest_version": 3,
    "name": "No Magoo",
    "description": "Hides comments from \"MisterMagooForYou\" on universalhub.com",
    "author": "Adam Balsam",
    "version": "1.1",
    "content_scripts": [
        {
            "matches": ["https://*.universalhub.com/*"],
            "all_frames": true,
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "64": "icon64.png",
        "128": "icon128.png",
        "256": "icon256.png",
        "512": "icon512.png"
    },
    "permissions": [
        "storage"
    ],
    "options_ui": {
        "page": "usernames.html",
        "open_in_tab": false
    }
}
